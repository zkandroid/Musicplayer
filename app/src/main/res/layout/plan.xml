<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollPicker"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/plantime"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#848284"

            >
            <RadioGroup
                android:id="@+id/rg_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:text="打开提醒 "
				android:textSize="10dip"
                android:id="@+id/rb_remind_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"/>
                <RadioButton
                    android:text="关闭提醒"
                    android:textSize="10dip"
                  android:id="@+id/rb_remind_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RadioGroup>
            <CheckBox
                android:text="振动"
                android:textSize="10dip"
                android:id="@+id/cb_remindbyvibrato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"/>
            <CheckBox
                android:text="铃声"
                android:textSize="10dip"
                android:id="@+id/cb_remindbyring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"/>
        </LinearLayout>
        <DatePicker
            android:id="@+id/plandatepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
        <TimePicker
            android:id="@+id/plantimepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </LinearLayout>
</ScrollView>